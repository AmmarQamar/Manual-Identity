@model LoginViewModel
<body style="  background: linear-gradient(to right, #b92b27, #1565c0);margin:0px;padding:0px">
    @if (ViewBag.Message != null)
    {
        <div>
            @ViewBag.Message
        </div>
    }

    <section name="Success">
        <div class="row col-md-12">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form method="post" asp-validation-summary="All">

                    <div class="box">
                        <h1>Login</h1>
                        <p class="text-muted"> Please Enter your Email and password</p>
                        <input asp-for="Email" placeholder="Email" class="input_email">

                        <input asp-for="Password" placeholder="Password">
                        <input asp-for="RememberMe" class="p-2" type="checkbox" />
                        <label style="color:#ffffffb0;margin-left:20px" class"text-muted" asp-for="RememberMe"></label>
                        <button type="submit">Login</button>

                    </div>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </section>
