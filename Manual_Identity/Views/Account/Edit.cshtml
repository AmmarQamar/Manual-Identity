@model Manual_Identity.Models.RegisterViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>RegisterViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" autocomplete="off" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" autocomplete="off" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
              <select asp-for="Gender" class="form-select">
                    <option value="">Select Gender</option>
                    <option>Male</option>
                    <option>Female</option>
                    <option>Other..</option>
                </select>
            <div class="pt-2  mb-2 ">
                <input type="file" name="imge" class="form-control" onChange="previewFile(this)" />     
                <img id="imgPreview" src="@Url.Content("~/image")/@Model.ImgPath" alt="pic" style="height: 300px; width: 100%; border: 2px solid black" />
            </div>


            <div class="form-group">
                <input type="submit" value="UPDATE" class="btn btn-primary" />
                <a asp-controller="Account" asp-action="UsersList" class="btn btn-primary">Cancel</a>
            </div>
        </form>
    </div>
    <a asp-action="Index">Back to List</a>
</div>
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");

}

<script>
    function previewFile(input)
    {
    var file = $("input[type=file]").get(0).files[0];
    if(file)
    {
    var s=URL.createObjectURL(file);
    $("#imgPreview").show();
    $("#imgPreview").attr("src", s);

    }
    }

</script>

