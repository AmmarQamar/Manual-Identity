@model IEnumerable<Manual_Identity.Models.ApplicationUser>
@inject SignInManager<ApplicationUser> signInManager;

@{
    ViewData["Title"] = "UsersList";
    Layout = "~/Views/Shared/SideNavBar.cshtml";
}

        <main class="main-content  mt-0">
            <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0">
                    <table id="myTable" class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Users</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">First Name</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Last Name</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Action</th>
                                <th class="text-secondary opacity-7"></th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex px-2 py-1">
                                        <div>
                                            <img src="~/image/@item.PhotoPath" class="avatar avatar-sm me-3 border-radius-lg" alt="user1">
                                        </div>
                                        <div class="d-flex flex-column justify-content-center">
                                            <p class="text-xs text-secondary font-weight-bold mb-0">@item.Email</p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <p class="text-xs font-weight-bold mb-0">@item.FirstName</p>
                                </td>
                                <td>
                                    <p class="text-xs font-weight-bold mb-0">@item.LastName</p>
                                </td>

                                <td class="align-middle text-center text-sm">
                                    <form method="get">
                                        <a class="badge badge-sm bg-gradient-success" asp-action="Edit" asp-route-id="@item.Id" data-toggle="tooltip" data-original-title="Edit user">
                                            Edit
                                        </a>
                                        <a class="badge badge-sm bg-gradient-success" asp-action="Detail" asp-route-id="@item.Id" data-toggle="tooltip" data-original-title="Edit user">
                                            Detail
                                        </a>
                                        <a class="badge badge-sm bg-gradient-success" asp-action="Delete" asp-route-id="@item.Id" data-toggle="tooltip" data-original-title="Edit user" onclick="return confirm('Are you want to delete:@item.Email')">
                                            Delete
                                        </a>
                                    </form>
                                </td>

                            </tr>
                            <tr>
                                <td>
                            </tr>
                        }
                    </table>
                      <div class="text-center">
                    <form method="get">
                                    <button type="submit" asp-controller="Account" asp-action="dashboard" class="btn btn-sm bg-gradient-primary btn-sm w-60 mt-4 mb-0">Back</button>
                                </form></div>
                </div>
            </div>


