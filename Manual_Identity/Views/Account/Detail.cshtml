@model Manual_Identity.Models.RegisterViewModel;

@{
    ViewData["Title"] = "Detail";
}

<h1>Details</h1>

<hr />
<div class="row">

    
        <table class="table table-hover">
            <tr>
                <th col-md-5>
                    <label asp-for="FirstName"></label>
                </th>
                <td style="border-left:1px" col-md-6> @Model.FirstName</td>
            </tr>

            <tr>
                <th col-md-5>
                    <label asp-for="LastName"></label>
                </th>
                <td col-md-6> @Model.LastName</td>
            </tr>
            <tr>
                <th col-md-5>
                    <label asp-for="Gender"></label>
                </th>
                <td col-md-6> @Model.Gender</td>
            </tr>
            <tr>
                <th col-md-5>
                    <label asp-for="Email"></label>
                </th>
                <td col-md-6> @Model.Email</td>
            </tr>
            <tr>
                <th col-md-5>
                    <label ">Image</label>
                </th>
                <td col-md-6>
                    <img id="imgPreview" src="@Url.Content("~/image")/@Model.ImgPath" alt="pic" style="height: 138px; border: 2px solid black" />
                </td>
            </tr>


        </table>

    </div>















