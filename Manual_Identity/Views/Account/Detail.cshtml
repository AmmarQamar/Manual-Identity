    <form>
        <div class="row" style="font-family:Cursive, Times New Roman, serif;">
            <div class="row col-md-12 mb-2">
                <div class="d-flex flex-column align-items-center text-center ">
                    <img class="rounded-circle mt-2 mb-2" id="imgPreview" src="@Url.Content("~/image")/@Model.ImgPath" alt="" style="height:200px;width:200px">
