                <div class="col-md-6">
                    <label>Last Name</label>
                </div>
                <div class="col-md-3">
                    @Model.LastName
                </div>
            </div>

            <div class="row col-md-12 mb-3">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <label>User Name</label>
                </div>
                <div class="col-md-3">
                    @Model.UserName
                </div>
            </div>

            <div class="row  col-md-12 mb-3">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <label>Email </label>
                </div>
                <div class="col-md-3">
                    @Model.Email
                </div>
            </div>


            <div class="row col-md-12 mb-3">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <label>Gender</label>
                </div>
                <div class="col-md-3">
                    @Model.Gender
                </div>
            </div>

        <button type="submit" formmethod="get" style="margin-left:auto" class="btn btn-primary col-md-1 mb-5 " asp-controller="Account" asp-action="UsersList">Back</button>
     
    </form>
