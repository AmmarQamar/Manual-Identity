@model EditRoleViewModel
@{
    ViewData["Title"] = "EditRole";
}

<form method="post" class="mt-3">
    <div asp-validation-summary=All class="text-danger"></div>
    <div class="card mb-3">
        <div class="card-header">
            <h3> Edit Role</h3>
            </div>
            <div class="card-body">
            <div class="row form-group mt-5 mb-3">
                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10 ">
                    <input asp-for="Id" disabled class="form-control" />
                </div>
            </div>


            <div class="row form-group mb-3">
                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-10 mt-4">
                    <button type="submit" class="btn btn-primary mb-3">Update</button>
                    <button type="submit" formmethod="get" class="btn btn-primary mb-3" asp-controller="Administration" asp-action="ListRoles">Cancel</button>
                </div>
            </div>
        </div>
        </div>
      

        <div class="card">
            <div class="card-header">
                <h3> Users In this Role</h3>
            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <h5 class="card-title">@user</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None at this Moment</h5>
                }

            </div>
        </div>




</form>
