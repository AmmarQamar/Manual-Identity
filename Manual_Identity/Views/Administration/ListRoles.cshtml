@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "All Roles";
}

<h1>All Roles</h1>
@if(Model.Any())
{
         <a  class="btn btn-primary" asp-controller="Administration" asp-action="CreateRole">Add New</a>

    foreach(var role in Model)
    {
        <div class="card mt-3">
            <div class="card-header">
                <h5>Role Name</h5></div>
     <div class="card-body mt-3">
    <p class="card-text">@role.Name</p>
   <a  class="btn btn-primary" asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id">Edit</a>
    <a  class="btn btn-danger">Delete</a>
  </div></div>
 


   @*     <div class="col-md-12 mb-10">
            <h3>Role Name</h3>
          <h5 style="margin-left:40px;">   @role.Name </h5>           
            <a  class="btn btn-primary">Edit</a>
            <a  class="btn btn-primary">Delete</a>
        </div>*@
    }
}
else
{
    <div class="row">
        <h4>No roles Found</h4>
        <button type="submit" class="btn btn-primary" asp-controller="Administration" asp-action="CreateRole">Add New Role</button>
    </div>
}

